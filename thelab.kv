AnchorLayoutExample:

<AnchorLayoutExample>
    # right, left, [center]
    anchor_x: "center"
    # bottom, top, [center]
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
            # size_hint: .1, .1
        
        Button:
            text: "B"
            # size_hint: .1, .1


<BoxLayoutExample>
    # orientation: "vertical"
    orientation: "horizontal"
    spacing: "10dp"
    Button:
        text: "A"
        size_hint: .5, None
        # size: "40dp", "40dp"
        width: "100dp"
        height: "60dp"
        # x, center_x, right
        # y, center_y, top
        pos_hint: { "center_x": 0.5, "center_y": 0.5}
    
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "b1"
        Button:
            text: "b2"
        Button:
            text: "b3"
        Button:
            text: "b4"

    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "40dp", "40dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1

        
    
    Label:
        text: "Hello2"
        size: "40dp", "40dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1