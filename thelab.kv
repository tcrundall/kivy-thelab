BoxLayoutExample:

<BoxLayoutExample>
    # orientation: "vertical"
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .5, None
        # size: "40dp", "40dp"
        width: "100dp"
        height: "60dp"
        # x, center_x, right
        # y, center_y, top
        pos_hint: { "center_x": 0.5, "center_y": 0.5}
    Button:
        text: "B"
    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "40dp", "40dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1
    
    Label:
        text: "Hello2"
        size: "40dp", "40dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1